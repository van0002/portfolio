body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f6f8;
    color: #333;
}

/* Header */
header {
    background-color: #222;
    color: white;
    padding: 20px;
    text-align: center;
}

nav a {
    color: #00c3ff;
    text-decoration: none;
    margin: 0 10px;
    font-weight: bold;
}

nav a:hover {
    text-decoration: underline;
}

/* Main Sections */
main {
    padding: 20px;
}

section {
    background: white;
    margin: 20px auto;
    padding: 20px;
    max-width: 800px;
    border-radius: 8px;
}

/* About Image */
section img {
    display: block;
    margin: 10px 0;
    border-radius: 50%;
}

/* Skills */
ul {
    list-style-type: square;
    padding-left: 20px;
}

/* Contact Form */
form input,
form textarea {
    width: 100%;
    padding: 8px;
    margin-top: 5px;
}

input[type="submit"] {
    background-color: #00c3ff1c;
    border: none;
    padding: 10px;
    color: black;
    font-weight: bold;
    cursor: pointer;
}

input[type="submit"]:hover {
    background-color: #90abb5ff;
}

/* Footer */
footer {
    background-color: #222;
    color: white;
    text-align: center;
    padding: 15px;
}

footer a {
    color: #00c3ff;
    text-decoration: none;
}
/* ==============================
   Mobile Responsive Design
   ============================== */

@media (max-width: 768px) {

    header h1 {
        font-size: 24px;
    }

    nav a {
        display: block;
        margin: 8px 0;
    }

    section {
        margin: 10px;
        padding: 15px;
    }

    section img {
        width: 120px;
    }

    form input,
    form textarea {
        font-size: 14px;
    }

    input[type="submit"] {
        width: 100%;
    }
}
